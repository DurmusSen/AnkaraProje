@*Update Skill sayfası oluşturarak verilerin girilmesi için aşağıdakiler yazılır ve başta tablo yüklenir*@

@model AnkaraProje.Models.TblSkill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Yetenek Güncelleme Sayfası</h2>
<form method="post">
    <label>Yetenek ID</label>
    <input type="text" name="SkilllD" value="@Model.SkilllD" class="form-control" />
    <br />
    <label>Yetenek Başlığı</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <br />
    <label>Yetenek Değeri</label>
    <input type="text" name="value" value="@Model.Value" class="form-control" />
    <br />

    <button class="btn btn-info">Yeteneği Güncelle</button>
</form>

